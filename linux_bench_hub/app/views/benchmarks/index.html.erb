<!-- app/views/benchmarks/index.html.erb -->
<h1 class="mb-4"><%= @category %></h1>
<%= link_to 'New Benchmark', new_benchmark_path, class: 'btn btn-primary mb-3' %>

<div class="row">
  <% @benchmarks.each do |benchmark| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to benchmark.name, benchmark_path(benchmark), class: 'text-decoration-none' %>
          </h5>
          <p class="card-text"><%= benchmark.description %></p>
          <%= link_to 'View Details', benchmark_path(benchmark), class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>