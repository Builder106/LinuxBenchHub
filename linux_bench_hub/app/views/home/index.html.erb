<div class="container mt-5">
  <section class="hero jumbotron text-center bg-light p-5 rounded">
    <div class="hero-content">
      <h1 class="display-4 fw-bold">Unleash the Power of Your Linux System</h1>
      <p class="lead mt-3">Benchmark and compare Linux distributions with ease. Discover optimal performance for your needs.</p>
      <div class="hero-buttons mt-4">
        <% if user_signed_in? %>
          <%= link_to 'Start Benchmarking', performance_benchmarks_path, class: 'btn btn-primary btn-lg' %>
        <% else %>
          <%= link_to 'Get Started', new_user_registration_path, class: 'btn btn-primary btn-lg me-2' %>
          <%= link_to 'Explore Benchmarks', performance_benchmarks_path, class: 'btn btn-outline-primary btn-lg' %>
        <% end %>
      </div>
    </div>
  </section>

  <section class="features mt-5">
    <h2 class="text-center mb-4">Key Features</h2>
    <div class="row">
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <i class="fas fa-rocket fa-3x text-primary mb-3"></i> <h5 class="card-title fw-bold">Effortless Benchmarking</h5>
            <p class="card-text">Run comprehensive benchmarks on various Linux distributions with just a few clicks.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
           <div class="card-body text-center">
            <i class="fas fa-chart-bar fa-3x text-success mb-3"></i><h5 class="card-title fw-bold">Detailed Comparisons</h5>
            <p class="card-text">Compare benchmark results side-by-side with interactive charts and graphs to make informed decisions.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body text-center">
            <i class="fas fa-share-alt fa-3x text-info mb-3"></i><h5 class="card-title fw-bold">Save & Share Results</h5>
            <p class="card-text">Save your benchmark configurations and results, and easily share them with the community.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>

<style>
/* Optional: Style the icons */
.fa-rocket, .fa-chart-bar, .fa-share-alt {
  transition: transform 0.3s ease-in-out; /* Add smooth transitions */
}

.card:hover .fa-rocket, .card:hover .fa-chart-bar, .card:hover .fa-share-alt {
  transform: scale(1.1); /* Slightly enlarge on hover */
}
</style>